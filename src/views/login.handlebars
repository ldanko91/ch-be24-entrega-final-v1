<h1>Accedé a tu usuario</h1>
<section id="login-section">
    <h3>Login con Usuario y Contraseña</h3>
    <form action="login" id="loginForm" class="login-card">
        <div class="form-group">
            <label for="userMail">Usuario</label>
            <input type="mail" id="userMail" name="email">
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" id="password" name="password">
        </div>
        <input type="submit" value="Enviar" id="sendLogin" class="btn-submit">
    </form>
    <div class="links">
        <h3>¿Olvidaste tu contraseña?</h3>
        <a href="/api/users/recovery">
            <h4>Restablece tu contraseña aquí</h4>
        </a>
        <a href="/api/users/githubLogin">
            <h3>Login con Github</h3>
        </a>
        <h3>¿Aún no tienes un usuario?</h3>
        <a href="/api/users/register">
            <h4>Registrate aquí</h4>
        </a>
    </div>
</section>
<script src="/js/login.js"></script>
